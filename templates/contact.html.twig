{% extends 'base.html.twig' %}
{% block body %}
    <img src="{{ asset('assets/img/contact.jpg') }}" width="100%" height=60% alt="">
    <center>
        <h2>Contact us</h2>
        <div class="col-4">
            <form method="post" action="/send">
                <input name="email" type="email" class="form-control" placeholder="Type your email">
                <textarea name="message" class="form-control" placeholder="Type your message"></textarea>
                <input type="submit" class="btn btn-success" value="Send">
            </form>
        </div>
    </center>


{% endblock %}